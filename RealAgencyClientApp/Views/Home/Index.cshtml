@model List<AnnouncementListModel>

<h1>Real Estate Listings</h1>

@if (Model == null || !Model.Any())
{
    <p>No real estate listings available.</p>
}
else
{
    <div class="row">
        @foreach (var realEstate in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@realEstate.Photos.FirstOrDefault()" class="card-img-top" alt="Real Estate Photo">
                    <div class="card-body">
                        <h5 class="card-title">@realEstate.Type</h5>
                        <p class="card-text">@realEstate.Description</p>
                        <p class="card-text"><strong>Price:</strong> $@realEstate.Price</p>
                        <a asp-controller="Home" asp-action="Announcement" asp-route-id="@realEstate.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}