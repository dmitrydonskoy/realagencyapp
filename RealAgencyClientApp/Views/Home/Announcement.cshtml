@model RealEstateDetailsDTO

@{
    ViewData["Title"] = "Real Estate Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- Подключение общего шаблона -->
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.AnnouncementTitle</h2>
            <p class="text-muted">@Model.AnnouncementDescription</p>
            <hr />

            <h4>Property Details</h4>
            <ul class="list-group">
                <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
                <li class="list-group-item"><strong>Address:</strong> @Model.Address</li>
                <li class="list-group-item"><strong>Rooms:</strong> @Model.Rooms</li>
                <li class="list-group-item"><strong>Type:</strong> @Model.Type</li>
                <li class="list-group-item"><strong>Square:</strong> @Model.Square m²</li>
                <li class="list-group-item"><strong>Floor:</strong> @Model.Floor</li>
                <li class="list-group-item"><strong>Bathroom:</strong> @Model.Bathroom</li>
                <li class="list-group-item"><strong>Repair:</strong> @Model.Repair</li>
                <li class="list-group-item"><strong>Furniture:</strong> @Model.Furniture</li>
                <li class="list-group-item"><strong>Transaction Type:</strong> @Model.TransactionType</li>
            </ul>

            <h4 class="mt-4">Area Information</h4>
            <p>@Model.AreaDescription</p>
        </div>

        <div class="col-md-4">
            <h4>Photos</h4>
            @if (Model.Photos != null && Model.Photos.Any())
            {
                <div class="row">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="col-6 mb-3">
                            <img src="@photo" alt="Property Photo" class="img-fluid img-thumbnail" />
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No photos available for this property.</p>
            }
        </div>
    </div>
</div>